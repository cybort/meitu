<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="io.github.yueeng.meitu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="io.github.yueeng.meitu.MainApplication"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="io.github.yueeng.meitu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.github.yueeng.meitu.ListActivity"
            android:theme="@style/AppThemeTranslucent">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="io.github.yueeng.meitu.PreviewActivity"
            android:theme="@style/AppThemeTranslucent" />
        <activity
            android:name="io.github.yueeng.meitu.CollectActivity"
            android:theme="@style/AppThemeTranslucent" />
        <activity
            android:name="io.github.yueeng.meitu.FavoriteActivity"
            android:theme="@style/AppThemeTranslucent" />
        <activity
            android:name="io.github.yueeng.meitu.FavoriteTagActivity"
            android:theme="@style/AppThemeTranslucent" />

        <provider
            android:name="io.github.yueeng.meitu.SearchHistoryProvider"
            android:authorities="@string/app_search_provider"
            android:exported="false" />
    </application>

</manifest>